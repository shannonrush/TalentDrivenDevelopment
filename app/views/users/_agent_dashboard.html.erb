<%= link_to "View Profile", user_path(@user) %>

<%= form_for(@user) do |f| %>
	<%= render :partial => 'shared/errors', :locals => {:object => @user} %>
	<div><%= f.label :email %><br />
  <%= f.email_field :email %></div>
	<div><%= f.label :name %><br/>
	<%= f.text_field :name %></div>
	<div><%= f.label :background %><br/>
	<%= f.text_area :background%></div>
	<div><%= f.label :statement%><br/>
	<%= f.text_area :statement%></div>
	<div><%= f.label :avatar %><br/>
	<%= f.file_field :avatar %></div>
	<div><%= f.submit "Submit" %></div>
<% end %>