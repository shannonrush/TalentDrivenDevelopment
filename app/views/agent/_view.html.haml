%div.avatar
  = image_tag @user.avatar.url(:medium)
-unless @user.badges.empty?
  =render 'badges/badge_lists', :user => @user  
%h2
  ="#{@user.first_name} #{@user.last_name}"
%p
  =mail_to @user.email
%p
  -if show_request?(current_user)
    =render "agent/#{request_by_availability(@user)}"
%p
  %h3
    ="#{@user.first_name}'s Background"
  =@user.background
%p
  %h3
    ="#{@user.first_name}'s Agent Statement"
  =@user.statement

